<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="@dimen/inviteUser_list_row_item_imageframe"
        android:layout_height="@dimen/inviteUser_list_row_item_imageframe"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/user_bg_icon" >

        <ImageView
            android:id="@+id/inviteuser_list_item_image"
            android:layout_width="@dimen/inviteUser_list_row_item_image"
            android:layout_height="@dimen/inviteUser_list_row_item_image"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/image_layout"
        android:layout_toLeftOf="@+id/delete_button" >

        <TextView
            android:id="@+id/inviteuser_list_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:singleLine="true"
            android:text="testingggggg" />

        <TextView
            android:id="@+id/inviteuser_list_item_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Base.ActionBar.Subtitle"
            android:singleLine="true"
            android:text="999999999" />
    </LinearLayout>
    
    <Button 
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:background="@drawable/cancel_icon"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
