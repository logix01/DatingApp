<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setting_help_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <ImageView
            android:id="@+id/help_image"
            android:layout_width="@dimen/Settings_screen_icon_width"
            android:layout_height="@dimen/Settings_screen_icon_width"
            android:layout_centerVertical="true"
            android:src="@drawable/help_icon" />

        <com.xabber.android.ui.register.settings.CustomTextView
            android:id="@+id/help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/help_image"
            android:paddingLeft="16dp"
            android:text="Help"
            android:textSize="@dimen/Settings_screen_text_size"/>
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dddddd"/>
    
    <RelativeLayout
        android:id="@+id/setting_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/Settings_screen_icon_width"
            android:layout_height="@dimen/Settings_screen_icon_width"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_icon" />

        <com.xabber.android.ui.register.settings.CustomTextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_image"
            android:paddingLeft="16dp"
            android:text="Profile"
            android:textSize="@dimen/Settings_screen_text_size"/>
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dddddd"/>
    
    <RelativeLayout
        android:id="@+id/setting_account_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/account_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@drawable/account_icon" />

        <com.xabber.android.ui.register.settings.CustomTextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/account_image"
            android:paddingLeft="16dp"
            android:text="Account" />
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dddddd"/>
    
    <RelativeLayout
        android:id="@+id/setting_notifications_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <ImageView
            android:id="@+id/notifications_image"
            android:layout_width="@dimen/Settings_screen_icon_width"
            android:layout_height="@dimen/Settings_screen_icon_width"
            android:layout_centerVertical="true"
            android:src="@drawable/notifications_icon" />

        <com.xabber.android.ui.register.settings.CustomTextView
            android:id="@+id/notifications_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/notifications_image"
            android:paddingLeft="16dp"
            android:text="Notifications Sound"
            android:textSize="@dimen/Settings_screen_text_size"/>
        <ImageView
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:src="@drawable/off_togglebtn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#dddddd"/>

</LinearLayout>


    <RelativeLayout
        android:id="@id/add_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include
            layout="@layout/banner_ad_layout"
            />
    </RelativeLayout>
</RelativeLayout><!-- From: file:/home/enuke/BlinderMainApp/blinder/app/src/main/res/layout/activity_setting.xml -->